---
import Layout from '../../layouts/Layout.astro';
import Post from '../../components/Post.astro';
import { getCollection } from 'astro:content';
import { siteMetadata } from '../../data/site';

export async function getStaticPaths() {
  const posts = (await getCollection('blog')).filter((p) => !p.data.draft);
  const categorySet = new Set(posts.map((p) => p.data.category.toLowerCase().replace(/\s+/g, '-')));
  return Array.from(categorySet).map((category) => ({
    params: { category },
    props: { categorySlug: category },
  }));
}

const { categorySlug } = Astro.props;
const categoryName = categorySlug.replace(/-/g, ' ');
const posts = (await getCollection('blog'))
  .filter((p) => !p.data.draft && p.data.category.toLowerCase().replace(/\s+/g, '-') === categorySlug)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

function categorySlugUrl(cat: string) {
  return `/categories/${cat.toLowerCase().replace(/\s+/g, '-')}/`;
}
---

<Layout title={`${categoryName} - ${siteMetadata.title}`} description={siteMetadata.subtitle}>
  <main id="main-content" class="content">
    <div class="content__inner">
      <div class="page">
        <h1 class="page__title">{categoryName}</h1>
        <div class="page__body">
          {posts.map((entry) => (
            <Post
              title={entry.data.title}
              date={entry.data.date}
              category={entry.data.category}
              description={entry.data.description}
              slug={entry.data.path.startsWith('/') ? entry.data.path : '/' + entry.data.path}
              categorySlug={categorySlugUrl(entry.data.category)}
            />
          ))}
        </div>
      </div>
    </div>
  </main>
</Layout>
