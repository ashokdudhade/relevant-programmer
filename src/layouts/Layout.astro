---
import '../assets/scss/init.scss';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'relevant programmer', description } = Astro.props;
const fullTitle = title;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{fullTitle}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Lora:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet" />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <div class="layout">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  .skip-link {
    position: absolute;
    top: -100%;
    left: 0;
    padding: 0.75rem 1.25rem;
    background: #0f766e;
    color: #fff;
    font-weight: 600;
    text-decoration: none;
    z-index: 100;
    transition: top 0.15s ease;
  }
  .skip-link:focus {
    top: 0;
    outline: none;
  }
  html { box-sizing: border-box; }
  *, *::before, *::after { box-sizing: inherit; }
  body {
    margin: 0;
    font-family: "Inter", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    color: #1a1a1a;
    line-height: 1.65;
    font-size: 17px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    background: #ffffff;
  }
  a:focus-visible,
  button:focus-visible {
    outline: 2px solid #0f766e;
    outline-offset: 2px;
  }
  .layout {
    max-width: 680px;
    margin-left: auto;
    margin-right: auto;
    padding: 1.5rem 24px 3rem;
  }
  /* Site header — all styles here so they always apply */
  header.site-header {
    display: block;
    padding: 1.5rem 0 2rem;
    border-bottom: 1px solid #e2e8f0;
    margin-bottom: 2rem;
  }
  header.site-header .site-header__inner {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
    gap: 0.5rem 1.25rem;
  }
  header.site-header .site-header__brand {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
    color: #1a1a1a;
    font-weight: 600;
    font-size: 1.25rem;
    letter-spacing: -0.02em;
    transition: color 0.15s ease;
  }
  header.site-header .site-header__brand:hover,
  header.site-header .site-header__brand:focus {
    color: #0f766e;
  }
  header.site-header .site-header__title {
    text-transform: lowercase;
  }
  header.site-header .site-header__byline {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    flex-wrap: nowrap;
  }
  header.site-header .site-header__by {
    color: #64748b;
    font-size: 13px;
  }
  header.site-header .site-header__author {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    color: #64748b;
    font-size: 13px;
    flex-shrink: 0;
  }
  header.site-header .site-header__photo-wrap {
    width: 18px;
    height: 18px;
    min-width: 18px;
    min-height: 18px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    border: 1px solid #e2e8f0;
    display: inline-block;
    vertical-align: middle;
  }
  header.site-header .site-header__photo-wrap img,
  header.site-header .site-header__photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    margin: 0;
    vertical-align: top;
  }
  header.site-header .site-header__author-name {
    color: #64748b;
    font-size: 13px;
  }
  header.site-header .site-header__nav {
    margin-left: auto;
    flex-shrink: 0;
  }
  header.site-header .site-header__nav .menu__list {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    gap: 0 1rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  header.site-header .site-header__nav .menu__list-item {
    margin: 0;
    padding: 0;
  }
  header.site-header .site-header__nav .menu__list-item-link {
    padding: 0.25rem 0;
    font-weight: 500;
    color: #1a1a1a;
    text-decoration: none;
    transition: color 0.15s ease;
  }
  header.site-header .site-header__nav .menu__list-item-link:hover,
  header.site-header .site-header__nav .menu__list-item-link:focus {
    color: #0f766e;
  }
  header.site-header .site-header__nav .menu__list-item-link--active {
    color: #0f766e;
    font-weight: 600;
  }
  /* Site footer — all styles here so they always apply */
  footer.site-footer {
    display: block;
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e2e8f0;
  }
  footer.site-footer .site-footer__inner {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }
  footer.site-footer .site-footer__copyright {
    color: #64748b;
    font-size: 13px;
    margin: 0;
    flex-shrink: 0;
  }
  footer.site-footer .links {
    margin-bottom: 0;
    flex-shrink: 0;
  }
  footer.site-footer .links__list {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  footer.site-footer .links__list-item {
    display: inline-block;
    margin: 0;
    padding: 0;
  }
  footer.site-footer .links__list-item a {
    width: 32px;
    height: 32px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
</style>
